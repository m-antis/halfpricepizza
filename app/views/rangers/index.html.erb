<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12">
      <div class="jumbotron">
        <h2>New York Rangers</h2>
        <table class="table table-hover">
          <tbody>
            <tr>
              <td>Game result:
                <td>
                  <%= @result %> (on <%= (@date - 2.days).strftime("%A") %>)
                </td>
              </td>
            </tr>
            <tr>
              <td>Score:
                <td>
                  <%= @rangers %>-<%= @opponent %>
                </td>
              </td>
            </tr>
            <tr>
              <td>Opponent:
                <td>
                  <%= @opponent_name %>
                </td>
              </td>
            </tr>
            <tr>
            <% if @result == 'W' %>
              <td>Discount code:
                <td>Rangers3</td>
              </td>
              <td>Valid until:
                <td>
                  <%= @date_formatted %>(11:59:59pm)
                </td>
              </td>
            <% end %>
            </tr>
            <tr>
              <td>Next game: 
                <td>
                  <% if (@date - 1).today? %>
                    Tonight (<%= @date_formatted %>),
                    <%= @time %>
                  <% else %>
                    <%= @date_formatted %> -
                    <%= @time %>
                  <% end %>
                  <br>
                   <%= @at %> <%= @next_opponent %>
                </td>
            </tr>
          </tbody>
        </table>
        <div id="row" style="text-align:center">
        <%= link_to "Create a pizza", "http://order.papajohns.com/index.html?site=WEB", class: "btn btn-success btn-lg", id: "continue", type: "button" %>
        <%= link_to "Not right now", "/", class: "btn btn-danger btn-lg", id: "notnow", type: "button"  %>
        </div>
    </div>
  </div>
</div>





       