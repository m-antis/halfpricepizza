
<div class="row"  id="rangers">
  <div class="container">
    <div class="jumbotron">
      <h2>New York Rangers</h2>
        <table class="table table-hover">
          <tbody>
            <tr>
              <td>Game result:
                <td>
                  <%= @result %> 
                  <% if Date.yesterday == @date_played %>
                  on
                    <%= @date_played.strftime("%A") %> (yesterday)
                  <% else %>
                  (on <%= (@date_played).strftime("%A") %>)
                  <% end %>
                </td>
              </td>
            </tr>
            <tr>
              <td>Score:
                <td>
                  <%= @rangers %>-<%= @opponent %>
                  <% if !@result_variation.empty? %>
                    (<%= @result_variation %>)
                  <% end %>
                </td>
              </td>
            </tr>
            <tr>
              <td>Opponent:
                <td>
                  <%= @recent_opponent %>
                </td>
              </td>
            </tr>
            <tr style="font-weight:bold">
            <% if @result == 'Won' %>
              <td>Discount code:
                <td>Rangers3</td>
              </td>
            </tr>
            <tr style="font-weight:bold">
              <td>Valid until:
                <td>
                  <% if Date.today > (@date_played + 1.day) %>
                    No longer valid
                  <% else %>  
                    <%= (@date_played + 1.day).strftime("%a. %m/%-d/%Y") %> (11:59:59pm)
                  <% end %>
                </td>
              </td>
            </tr>
            <% end %>
            </tr>
            <tr>
              <td>Next game: 
                <td>
                  <% if (@next_faceoff - 1).today? %>
                    Tonight (<%= @next_faceoff_formatted %>),
                    <%= @next_game_time %>
                  <% else %>
                    <%= @next_faceoff_formatted %> -
                    <%= @next_game_time %>
                  <% end %>
                  <br>
                   <%= @next_location %> <%= @next_opponent %>
                </td>
            </tr>
          </tbody>
        </table>
        <div style="text-align:center">
        <%= link_to "Create a pizza", "http://order.papajohns.com/index.html?site=WEB", class: "btn btn-success btn-lg", id: "continue", type: "button" %>
        <%= link_to "Not right now", "/", class: "btn btn-danger btn-lg", id: "notnow", type: "button"  %>
        </div>
      </div><!-- end jumbotron -->
    </div>
  </div>






